<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SingleChoiceDialogFrame"
    android:orientation="vertical">

    <requestFocus />

    <EditText
        android:id="@+id/dialog_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/input_edit_box"
        android:padding="5dp" />

    <View style="@style/SingleChoiceDialogDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/transparent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_left"
            style="@style/DialogButton"
            android:layout_weight="1" />

        <View style="@style/DialogVerticalDivider" />

        <Button
            android:id="@+id/dialog_right"
            style="@style/DialogButton"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>